<div class="ui tiny inverted menu">
  <div class="ui container"> 
  <%= link_to "ChatApp", root_path, class: "item" %>
  <a class="item"> Messages </a>
  <div class="right menu">
    <div class="ui dropdown item"> My Account <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %>
        <%= link_to "Log Out", logout_path, class: "item", method: :delete %>
      <% else %>
        <%= link_to "Log In", login_path, class: "item" %>
      <% end %>
    </div>
    </div>
    <% if !logged_in? %>
      <div class="item">
        <div class="ui primary button"> Sign Up </div>
      </div>
    <% end %>
  </div>
  </div>
</div>